<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fr.utt.if26.troyes.AjouterPhoto">

    <Button
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/buttonstylepink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter Photo"
        android:onClick="btnBrowse_Click"
        android:textSize="15sp"
        android:textColor="#ffff"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_ajouter_photo_24dp"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="270dp"
        android:layout_gravity="center"
        android:id="@+id/imageViewL"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtImageNamel"
        android:hint="Image Name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtImageDescriptionl"
        android:hint="Image Description"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/buttonstylepink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnUpload"
            android:text="Valider"
            android:textSize="15sp"
            android:textColor="#ffff"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_valider_photo_24dp"/>/>

        <Button
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:background="@drawable/buttonstylepink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnShowListImage_Click"
            android:text="Voir "
            android:textSize="15sp"
            android:textColor="#ffff"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_voir_photo_24dp"/>/>

    </LinearLayout>

</LinearLayout>
